<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="408dp"
    android:layout_height="620dp"
    tools:context=".ui.home.AddPost">


    <EditText
        android:id="@+id/descricaoPost"
        android:layout_width="383dp"
        android:layout_height="98dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:hint="Insira a descrição do post aqui"
        android:inputType="text"
        android:maxLength="200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloPost" />

    <Button
        android:id="@+id/addImagem"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="Adicionar foto"
        app:layout_constraintStart_toEndOf="@+id/addLocalizacao"
        app:layout_constraintTop_toBottomOf="@+id/descricaoPost" />

    <Button
        android:id="@+id/addLocalizacao"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="Adicionar Localização"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descricaoPost" />

    <EditText
        android:id="@+id/tituloPost"
        android:layout_width="377dp"
        android:layout_height="46dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Insira o título do post aqui"
        android:inputType="text"
        android:maxLength="50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/postar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="84dp"
        android:text="Postar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addLocalizacao"
        app:layout_constraintVertical_bias="0.901" />

</androidx.constraintlayout.widget.ConstraintLayout>